{
    "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "defaultPalette": false,
            "palette": [
                {
                    "color": "#F1F1E6",
                    "name": "Base",
                    "slug": "base"
                },
                {
                    "color": "#314A59",
                    "name": "Contrast",
                    "slug": "contrast"
                },
                {
                    "color": "#E6B45E",
                    "name": "Accent 1",
                    "slug": "accent-1"
                },
                {
                    "color": "#E6A4A1",
                    "name": "Accent 2",
                    "slug": "accent-2"
                },
                {
                    "color": "#1D636B",
                    "name": "Accent 3",
                    "slug": "accent-3"
                },
                {
                    "color": "#8A8A82",
                    "name": "Accent 4",
                    "slug": "accent-4"
                },
                {
                    "color": "#F8F8F2",
                    "name": "Accent 5",
                    "slug": "accent-5"
                },
                {
                    "color": "color-mix(in srgb, currentColor 20%, transparent)",
                    "name": "Accent 6",
                    "slug": "accent-6"
                }
            ]
        },
        "layout": {
            "contentSize": "960px",
            "wideSize": "1200px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "PT Serif",
                    "slug": "pt-serif",
                    "fontFamily": "\"PT Serif\", serif",
                    "google": "https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
                },
                {
                    "name": "Libre Franklin",
                    "slug": "libre-franklin",
                    "fontFamily": "\"Libre Franklin\", sans-serif",
                    "google": "https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,100..900;1,100..900&display=swap"
                }
            ]
        }     
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--pt-serif)"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            }
        },
        "blocks": {
            "core/navigation": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
                    "fontWeight": "500"
                }
            },
            "core/navigation-link": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--libre-franklin)"
                }
            },
            "core/navigation-submenu": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--libre-franklin)"
                }
            },
            "core/quote": {
                "border": {
                    "style": "solid",
                    "width": "0 0 0 4px",
                    "color": "var(--wp--preset--color--accent-1)"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--30)",
                        "right": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--30)",
                        "left": "var(--wp--preset--spacing--40)"
                    },
                    "margin": {
                        "top": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--40)"
                    }
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
                    "fontWeight": "300",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontStyle": "italic",
                    "lineHeight": "1.5"
                },
                "color": {
                    "background": "var(--wp--preset--color--accent-5)",
                    "text": "var(--wp--preset--color--contrast)"
                },
                "elements": {
                    "cite": {
                        "typography": {
                            "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
                            "fontSize": "var(--wp--preset--font-size--small)",
                            "fontStyle": "normal",
                            "fontWeight": "500"
                        },
                        "color": {
                            "text": "var(--wp--preset--color--accent-4)"
                        }
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "main-header",
            "title": "Main Header",
            "area": "header"
        },
        {
            "name": "main-footer",
            "title": "Main Footer",
            "area": "footer"
        }
    ]
}