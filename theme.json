{
    "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "defaultPalette": false,
            "palette": [
                {
                    "color": "#F1F1E6",
                    "name": "Base",
                    "slug": "base"
                },
                {
                    "color": "#314A59",
                    "name": "Contrast",
                    "slug": "contrast"
                },
                {
                    "color": "#E6B45E",
                    "name": "Accent 1",
                    "slug": "accent-1"
                },
                {
                    "color": "#E6A4A1",
                    "name": "Accent 2",
                    "slug": "accent-2"
                },
                {
                    "color": "#1D636B",
                    "name": "Accent 3",
                    "slug": "accent-3"
                },
                {
                    "color": "#8A8A82",
                    "name": "Accent 4",
                    "slug": "accent-4"
                },
                {
                    "color": "#F8F8F2",
                    "name": "Accent 5",
                    "slug": "accent-5"
                },
                {
                    "color": "color-mix(in srgb, currentColor 20%, transparent)",
                    "name": "Accent 6",
                    "slug": "accent-6"
                }
            ]
        },
        "layout": {
            "contentSize": "960px",
            "wideSize": "1200px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "Manrope",
                    "slug": "manrope",
                    "fontFamily": "Manrope, sans-serif",
                    "fontFace": [
                        {
                            "src": [
                                "file:./assets/fonts/manrope/Manrope-VariableFont_wght.woff2"
                            ],
                            "fontWeight": "200 800",
                            "fontStyle": "normal",
                            "fontFamily": "Manrope"
                        }
                    ]
                },
                {
                    "name": "Fira Code",
                    "slug": "fira-code",
                    "fontFamily": "\"Fira Code\", monospace",
                    "fontFace": [
                        {
                            "src": [
                                "file:./assets/fonts/fira-code/FiraCode-VariableFont_wght.woff2"
                            ],
                            "fontWeight": "300 700",
                            "fontStyle": "normal",
                            "fontFamily": "\"Fira Code\""
                        }
                    ]
                },
                {
                    "name": "PT Serif",
                    "slug": "pt-serif",
                    "fontFamily": "\"PT Serif\", serif",
                    "fontFace": [
                        {
                            "fontFamily": "PT Serif",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/pt-serif/PTSerif-Regular.woff2"]
                        },
                        {
                            "fontFamily": "PT Serif",
                            "fontWeight": "400",
                            "fontStyle": "italic",
                            "src": ["file:./assets/fonts/pt-serif/PTSerif-Italic.woff2"]
                        },
                        {
                            "fontFamily": "PT Serif",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/pt-serif/PTSerif-Bold.woff2"]
                        },
                        {
                            "fontFamily": "PT Serif",
                            "fontWeight": "700",
                            "fontStyle": "italic",
                            "src": ["file:./assets/fonts/pt-serif/PTSerif-BoldItalic.woff2"]
                        }
                    ]
                },
                {
                    "name": "Libre Franklin",
                    "slug": "libre-franklin",
                    "fontFamily": "\"Libre Franklin\", sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Libre Franklin",
                            "fontWeight": "100 900",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/libre-franklin/LibreFranklin-VariableFont_wght.woff2"]
                        },
                        {
                            "fontFamily": "Libre Franklin",
                            "fontWeight": "100 900",
                            "fontStyle": "italic",
                            "src": ["file:./assets/fonts/libre-franklin/LibreFranklin-Italic-VariableFont_wght.woff2"]
                        }
                    ]
                }
            ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--pt-serif)"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--pt-serif)"
                }
            }
        },
        "blocks": {
            "core/navigation": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
                    "fontWeight": "500"
                }
            },
            "core/navigation-link": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--libre-franklin)"
                }
            },
            "core/navigation-submenu": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--libre-franklin)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "main-header",
            "title": "Main Header",
            "area": "header"
        },
        {
            "name": "main-footer",
            "title": "Main Footer",
            "area": "footer"
        }
    ]
}